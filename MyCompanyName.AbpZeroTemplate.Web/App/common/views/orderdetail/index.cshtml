
@using MyCompanyName.AbpZeroTemplate.Localization
<div ng-controller="common.views.orderDetails.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>订单明细</span> <small>订单明细管理列表</small>
                    </h1>
                </div>
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <button class="btn green" ng-click="vm.getPagedorderDetails()"><i class="fa fa-refresh"></i> @L("Refresh")</button>
            <button class="btn btn-default " ng-click="vm.exportToExcel()"><i class="fa fa-plus"></i>@L("ExportToExcel")</button>
        </div>
    </div>
    <div class="portlet light margin-bottom-0">
        <div class="portlet-body">
            <div class="form">
                <div class="form-body" enter-key="vm.getPagedorderDetails()">
                    <div class="row margin-bottom-10">
                        <div class="col-md-12">
                            <div class="inputs inputs-full-width">
                                @* 用于控制input的组件 *@
                                <div class="portlet-input">
                                    <form>
                                        <div class="row">
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label class="control-label">客户订单号</label>
                                                    <input ng-model="vm.requestParams.orderNum" auto-focus class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label class="control-label">身份证号</label>
                                                    <input ng-model="vm.requestParams.idCard" class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label class="control-label">姓名</label>
                                                    <input ng-model="vm.requestParams.realName" class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label class="control-label">验证结果</label>
                                                    <input ng-model="vm.requestParams.status" class="form-control" type="text">
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div busy-if="vm.loading">
                @* 此处考虑了阿拉伯人，他们的是从右往左写的，所以加了个判断 *@
                <div ui-grid="vm.orderDetailGridOptions" ui-grid-pagination ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
            </div>
        </div>
    </div>
</div>









