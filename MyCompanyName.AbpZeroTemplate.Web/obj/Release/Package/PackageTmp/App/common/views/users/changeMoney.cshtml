<div>
    <form name="changeMoneyForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>变更余额 {{vm.name}}</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group form-md-line-input form-md-floating-label">
                <span>当前余额：{{vm.nowMoney}} 元</span>
            </div>
            <div class="form-group form-md-line-input   form-md-floating-label">
                <input type="text" name="money" class="form-control input-ltr" ng-model="vm.money" required ng-pattern="/^-?\d{1,8}(.\d{1,2})?$/">
                <label>充值金额(元)</label>
            </div>
            <div class="form-group form-md-line-input form-md-floating-label">
                <input type="text" name="mark" class="form-control input-ltr" ng-model="vm.mark" required >
                <label>备注</label>
            </div>
        </div>
        <div class="modal-footer">
            <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" button-busy="vm.saving" busy-text="@L("SavingWithThreeDot")" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="changeMoneyForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>